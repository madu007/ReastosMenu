@using ReastosMenu
@model BookingModel
@{
    Layout = "_AdminLayout";
}
<!-- Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Add Booking</h6>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-floating mb-3">
                        <input type="text" asp-for="Name" class="form-control" id="floatingInput"
                               placeholder="Name" required>
                        <label for="floatingInput">Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="email" asp-for="Email" class="form-control" id="floatingInput" required
                               placeholder="Email">
                        <label for="floatingInput">Email Address</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="datetime" asp-for="DateAndTime" class="form-control" id="floatingInput" required
                               placeholder="Date / Time">
                        <label for="floatingInput">Date And Time</label>
                        <span asp-validation-for="DateAndTime" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <select class="form-select" asp-for="NumberOfPeople" required
                                asp-items="Html.GetEnumSelectList<NumberOfPerson>()" aria-label="Floating label select example">
                            <option>Please select number of person</option>
                        </select>
                        <label for="floatingSelect">Select number of Persons</label>
                        <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <textarea class="form-control" type="text" asp-for="SpecialRequest" required placeholder="Special Request"
                                  id="floatingTextarea" style="height: 100px;"></textarea>
                        <label for="floatingTextarea">Special Request</label>
                        <span asp-validation-for="SpecialRequest" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Add booking</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Form End -->
